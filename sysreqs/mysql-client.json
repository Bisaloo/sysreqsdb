{
    "name": "mysql-client",
    "title": "MySQL database client library",
    "uri": "https://dev.mysql.com/",

    "sysreqs": [
	"/MySQL.MariaDB client headers/",
	"libmariadb-client-dev",
	"mariadb-connector-c",
	"mysql-connector-c"
    ],

    "dependencies": [

	{ "runtime-packages": [ "libmysqlclient18" ],
	  "buildtime-packages": [ "libmysqlclient-dev" ],
	  "os": "linux",
	  "distributions": [ "ubuntu" ],
	  "from-version": "12.04",
	  "before-version": "16.04"
	},

	{ "runtime-packages": [ "libmysqlclient18" ],
	  "buildtime-packages": [ "libmysqlclient-dev" ],
	  "os": "linux",
	  "distributions": [ "debian" ],
	  "from-version": "6.0",
	  "before-version": "9"
	},

	{ "buildtime-packages": [ "libmariadb-client-lgpl-dev" ],
	  "runtime-packages": [ "libmariadb2" ],
	  "os": "linux",
	  "distributions": [ "debian", "ubuntu" ]
	},

	{ "packages": [ "mariadb-connector-c" ],
	  "os": "macos",
	  "distributions": [ "brew" ]
	},

	{ "packages": [ "libmariadbclient" ],
	  "os": "windows",
	  "distributions": [ "msys2" ]
	}
    ]
}
